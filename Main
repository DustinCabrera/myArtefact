public static void lI() {//done

	System.out.println("1 Internal Risk ");
	System.out.println("Virus risk - Use Antiviruses provided by the system or download one in your offical application store");
}
public static void rI() {//done
		System.out.println("1 Internal Risk ");
		System.out.println("Risk of Malware from Third Party Apps - Use Official app stores ");
}
public static void II() {//done
	System.out.println("Full Internal Risks ");
	System.out.println("Virus risk - Use Antiviruses provided by the system or download one in your offical application store");
	System.out.println("Risk of Malware from Third Party Apps - Use Official app stores ");
}
public static void lE() {//done
	System.out.println("1 External Risk ");
	System.out.println("Risk of Public Wifi attacks - Use Virtual Private Networks ");
}

public static void rE() {//done
		System.out.println("1 External Risk ");
		System.out.println("Risk of Theft and loss - Store phone in secure places and Use “Find your phone” applications ");
}		
