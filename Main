package main;

import java.util.Scanner;
public class Main {

	//public variables for use through of class such as Scanners and Array lists
	public static Scanner in = new Scanner(System.in).useDelimiter("\\n");
	public static Scanner inint = new Scanner(System.in);
	
		public static void main(String[] args) {
		menu();	}
public static void menu() {

int menu = 0;

do{
	//This prints a text on the screen to show instructions to the user
	System.out.println("Mobile Phone Security Advice and Help");
	System.out.println("The following questions are Yes and No Questions");
	System.out.println("Press 1 for YES");
	System.out.println("Press 2 for NO");
	System.out.println("Each question will help you decide what the reccomended actions are needed to better secure your device");
	System.out.println("");
	System.out.println("If you are ready press the number indicating YES");
	
	//This records the users choice
	menu = inint.nextInt(); //"inint" is the input name indicating that only integers should only be put as an input
	
	switch(menu){ //a switch statement is used in order to help navigate what the user wants to enter
	
	case 1:
		//calls the method within this class that directs to the first question
		questionOne();
		break;
	
	}// indicates end of switch statement
	
} while (menu != 0); //end of loop

}// end of main method concerning main directory
public static void questionOne() {

	int menu = 0;

	do{
		//prints the first question
		System.out.println("Do you use VPN's (Virtual Private Networks) prior to connecting to public wifi? ");

		
		menu = inint.nextInt(); //Only integers should be input
		
		switch(menu){// Since menu = inint.nextInt(); the user should only put integers

		case 1:
			lEyes();
			break;// Each break allows the switch to stop the user from moving to the next case after current case is completed
		
		case 2:
			lEno();
			break;

		}
		
	} while (menu != 0); //end of loop
	
}
public static void lEyes() {

	int menu = 0;

	do{
		System.out.println("Are you able to locate your device from another device? ");

		
		menu = inint.nextInt(); 
		switch(menu){
		case 1:
			lEyesrEyes();
			break;
		case 2:
			lEyesrEno();
			break;

		}
		
	} while (menu != 0);
}
